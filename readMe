#include <iostream>
using namespace std;

float sum_two_numbers(float a, float b) {
    return a + b;
}

int main() {
    float num1, num2;
    
    cout << "Enter first number: ";
    cin >> num1;
    
    cout << "Enter second number: ";
    cin >> num2;
    
    float result = sum_two_numbers(num1, num2); // Вызываем функцию для сложения двух чисел
    cout << "Sum: " << result << endl;  // Выводим результат
    char operation;
    cout << "Choose operation (+ for plus, - for minus): ";
    cin >> operation;
    float result = sum_two_numbers(num1, num2);
    cout << "Sum: " << result << endl;
    
    return 0;

    //новый коммит

}